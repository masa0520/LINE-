<!DOCTYPE html>
<html>
  <head>
    <title>LINEnglish</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div id="nav">
    <% if current_user %>
      <%= button_to t('defaluts.logout'), :logout, method: :post %>
    <% else %>
      <%= link_to t('defaults.user_new'), new_user_path %> |
      <%= link_to t('defaults.login'), :login %>
    <% end %>
    </div>
    <%= render 'shared/flash' %>
    <main class="container mx-auto mt-28 px-5 flex">
      <%= yield %>
    </main>
  </body>
</html>
